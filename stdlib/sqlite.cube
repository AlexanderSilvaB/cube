native sqlite
{
    int open(cstring, cbool);
    cbool close(int);
    cbool exec(int, cstring);
    list data(int);
    cstring error(int);
    int lastInserted(int);
}

import sqldatabase as default

class SqliteDB : DB
{
    var id = -1
    func init(path, create)
    {   
        if(create is null)
            create = true
        id = open(path, create)
        if(id < 0)
            throw("Cannot open the database '${path}'")
    }

    func done()
    {
        close(id)
        id = -1
        super.done()
    }

    func query(sql)
    {
        println(sql)
        return exec(id, sql)
    }

    func lastId()
    {
        return lastInserted(id)
    }

    func results()
    {
        return data(id)
    }

    func getError()
    {
        return error(id)
    }
}