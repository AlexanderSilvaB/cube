native mysql
{
    int opendb(cstring, cstring, cstring, cstring);
    cbool close(int);
    cbool exec(int, cstring);
    list data(int);
    cstring error(int);
    int lastInserted(int);
}

import sqldatabase as default

class MySqlDB : DB
{
    var id = -1
    func init(host, user, passwd, name)
    {
        setKey(AUTO_INCREMENT, 'AUTO_INCREMENT')

        id = opendb(host, user, passwd, name)
        if(id < 0)
            throw("Cannot connect the database '${name}'")
    }

    func done()
    {
        close(id)
        id = -1
        super.done()
    }

    func query(sql)
    {
        return exec(id, sql)
    }

    func lastId()
    {
        return lastInserted(id)
    }

    func results()
    {
        return data(id)
    }

    func getError()
    {
        return error(id)
    }
}